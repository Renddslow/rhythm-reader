{
  "name": "rhythm-reader",
  "version": "1.0.0",
  "private": true,
  "description": "A Bible reader for a theme study of Sacred Rhythms.",
  "repository": "https://github.com/Renddslow/rhythm-reader",
  "license": "MIT",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "main": "dist/index.js",
  "scripts": {
    "start": "netlify dev",
    "build:js": "node build.js",
    "build:md": "node tools/parseMarkdown.js",
    "build:data": "run-s build:md build:compile",
    "build:compile": "node tools/compileAssets.js",
    "build": "run-p build:data build:js",
    "lint-staged": "lint-staged",
    "postbuild": "cp asset-plan.json public/assets"
  },
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": "@dmsi/prettier-config",
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "concurrency": 4,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "1m"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.0",
    "@babel/plugin-transform-react-jsx": "^7.17.12",
    "@babel/preset-react": "^7.17.12",
    "@babel/register": "^7.17.7",
    "@dmsi/prettier-config": "^1.3.0",
    "@types/node": "^17.0.23",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/styled-components": "^5.1.25",
    "ava": "^4.2.0",
    "babel-plugin-styled-components": "^2.0.7",
    "chapter-and-verse": "^3.0.4",
    "esbuild": "^0.14.36",
    "globby": "^13.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "make-dir": "^3.1.0",
    "mri": "^1.2.0",
    "netlify-cli": "^10.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@saibotsivad/blockdown": "^3.0.0",
    "@sendgrid/mail": "^7.6.2",
    "await-to-js": "^3.0.0",
    "color-hash": "^2.0.1",
    "cookie": "^0.5.0",
    "date-fns": "^2.28.0",
    "faunadb": "^4.5.4",
    "got": "^12.1.0",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "kleur": "^4.1.4",
    "phosphor-react": "^1.4.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.3.0",
    "snarkdown": "^2.0.0",
    "styled-components": "^5.3.5"
  }
}
